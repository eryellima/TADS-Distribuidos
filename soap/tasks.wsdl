<definitions name="TaskService"
  targetNamespace="http://localhost:3000/tasks"
  xmlns:tns="http://localhost:3000/tasks"
  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns="http://schemas.xmlsoap.org/wsdl/">
  
  <message name="AddTaskRequest">
    <part name="title" type="xsd:string"/>
  </message>
  
  <message name="AddTaskResponse">
    <part name="taskId" type="xsd:int"/>
  </message>
  
  <portType name="TaskPort">
    <operation name="AddTask">
      <input message="tns:AddTaskRequest"/>
      <output message="tns:AddTaskResponse"/>
    </operation>
  </portType>
  
  <binding name="TaskBinding" type="tns:TaskPort">
    <soap:binding style="document"
      transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="AddTask">
      <soap:operation soapAction="http://localhost:3000/tasks/AddTask"/>
      <input>
        <soap:body use="literal"/>
      </input>
      <output>
        <soap:body use="literal"/>
      </output>
    </operation>
  </binding>
  
  <service name="TaskService">
    <port name="TaskPort" binding="tns:TaskBinding">
      <soap:address location="http://localhost:3000/tasks"/>
    </port>
  </service>
  
</definitions>
